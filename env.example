# =============================================================================
# CONFIGURACIÃ“N DE EJEMPLO - Panel Bet IA
# =============================================================================
# Copia este archivo como .env y configura tus valores reales
# NUNCA subas el archivo .env a Git (debe estar en .gitignore)

# =============================================================================
# API CONFIGURATION - Football API
# =============================================================================
API_KEY=your_rapidapi_key_here
API_HOST=api-football-v1.p.rapidapi.com

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_HOST=localhost
DB_PORT=3306
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_DATABASE=betting_predictions

# =============================================================================
# REDIS CONFIGURATION (Optional - for caching)
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5

# =============================================================================
# PREDICTION CONFIGURATION
# =============================================================================
# Minimum number of matches required for predictions
MIN_MATCHES_REQUIRED=5

# Value betting margin (5% = 0.05)
VALUE_BET_MARGIN=0.05

# API rate limiting (seconds between requests)
API_RATE_LIMIT=0.5

# Maximum goals to consider in Poisson calculations
MAX_GOALS=10

# =============================================================================
# BOOKMAKER CONFIGURATION
# =============================================================================
PRIMARY_BOOKMAKER_ID=8  # Bet365
SECONDARY_BOOKMAKER_IDS=3,4,6,11  # Betfair,Pinnacle,Bwin,1xBet

# =============================================================================
# NOTIFICATION CONFIGURATION (Optional)
# =============================================================================
# Slack webhook for alerts
SLACK_WEBHOOK_URL=

# Email configuration
SMTP_SERVER=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
ALERT_EMAIL=

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# Set to 'development', 'testing', or 'production'
ENVIRONMENT=development

# Enable debug mode (True/False)
DEBUG=True

# =============================================================================
# MODEL CONFIGURATION
# =============================================================================
# Path to trained models
MODEL_PATH=models/

# Model retraining threshold (accuracy below this triggers retraining)
MODEL_ACCURACY_THRESHOLD=0.65

# Backtesting configuration
BACKTEST_START_DATE=2023-01-01
BACKTEST_END_DATE=2024-01-01
